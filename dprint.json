{
  "incremental": true,
  "useTabs": false,
  "lineWidth": 100,
  "indentWidth": 2,
  "newLineKind": "lf",
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle",
    "useBraces": "always",
    "bracePosition": "sameLine",
    "trailingCommas": "onlyMultiLine",
    "arrowFunction.useParentheses": "preferNone",
    "jsx.quoteStyle": "preferDouble",
    "jsx.multiLineParens": "prefer",
    "typeLiteral.separatorKind.multiLine": "semiColon",
    "typeLiteral.separatorKind.singleLine": "comma"
  },
  "json": {
    "associations": [
      ".swcrc"
    ]
  },
  "markdown": {
  },
  "includes": [
    "./*.{md,js,json}",
    "src/**/*.{ts,tsx,js,jsx,cjs,mjs,json,md}"
  ],
  "excludes": [
    ".yarn",
    "**/node_modules",
    "**/*-lock.json",
    "**/vendor"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.71.2.wasm",
    "https://plugins.dprint.dev/json-0.15.5.wasm",
    "https://plugins.dprint.dev/markdown-0.14.0.wasm"
  ]
}
